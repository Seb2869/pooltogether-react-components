{
  "name": "@pooltogether/react-components",
  "version": "0.0.1",
  "description": "PoolTogether UI elements in a shared lib",
  "author": "PoolTogether",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.js",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pooltogether/pooltogether-react-components.git"
  },
  "keywords": [
    "react",
    "library",
    "components",
    "tailwindcss"
  ],
  "scripts": {
    "reinstall": "rm -rf ./node_modules && yarn",
    "start": "rollup -c -w",
    "watch": "yarn start",
    "build": "NODE_ENV=production rollup -c",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build",
    "format:css": "prettier --write ./*.css ./**/*.css",
    "format:js": "prettier --write ./*.{js,json} ./**/*.{js,json}",
    "format:reason": "refmt --in-place src/**/*.re",
    "format": "yarn format:js && yarn format:css && yarn format:reason",
    "link-local": "yarn link @pooltogether/hooks && yarn link react && yarn link react-dom && yarn link jotai  && yarn link framer-motion && yarn link lodash && yarn link tailwindcss && yarn link feather-icons-react",
    "unlink-local": "yarn unlink @pooltogether/hooks && yarn unlink react && yarn unlink react-dom && yarn unlink jotai && yarn unlink framer-motion && yarn unlink lodash && yarn unlink tailwindcss && yarn unlink feather-icons-react"
  },
  "dependencies": {
    "@reach/dialog": "^0.15.0",
    "@reach/menu-button": "^0.15.1",
    "@reach/popover": "^0.15.0",
    "@reach/visually-hidden": "0.15.0",
    "autoprefixer": "^10.2.3",
    "classnames": "^2.2.6",
    "js-cookie": "^2.2.1",
    "react-device-detect": "^1.15.0",
    "react-hotkeys": "^2.0.0",
    "react-loader-spinner": "^4.0.0",
    "react-spinners": "^0.10.4",
    "react-tooltip": "^4.2.21"
  },
  "peerDependencies": {
    "@pooltogether/hooks": "^0.0.23",
    "feather-icons-react": "^0.4.1",
    "framer-motion": "^4.1.17",
    "jotai": "^0.11.2",
    "lodash": "^4.17.20",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@pooltogether/hooks": "^0.0.33",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@svgr/rollup": "^5.5.0",
    "classnames": "^2.2.6",
    "deepmerge": "^4.2.2",
    "feather-icons-react": "^0.4.1",
    "framer-motion": "3.7.0",
    "jotai": "^0.14.0",
    "lodash": "^4.17.20",
    "postcss": "^8.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.38.0",
    "rollup-plugin-css-porter": "^1.0.2",
    "rollup-plugin-filesize": "^9.1.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-url": "^3.0.1",
    "tailwindcss": "^2.1.2"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.re": [
      "refmt --in-place",
      "git add"
    ]
  }
}
